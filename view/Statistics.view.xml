<mvc:View
	controllerName="sap.ui.demo.toolpageapp.controller.Statistics"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:mc="sap.suite.ui.microchart">

	<Page showHeader="false">
		<content>
			<Panel id="statisticsContainer" class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title
							text="{i18n>shopStatisticsTitle}"
							level="H4"
							textAlign="Left"/>
						<ToolbarSpacer/>
						<Button
							id="refresh"
							icon="sap-icon://refresh"
							press="onRefresh"/>
					</Toolbar>
				</headerToolbar>
			</Panel>
		</content>
	</Page>
</mvc:View>